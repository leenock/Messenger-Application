<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@android:color/holo_green_light">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_editText_register"
            android:background="@android:color/white"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/username" android:layout_marginTop="32dp" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:autofillHints="" tools:targetApi="o"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:id="@+id/email_editext_register"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/username_editText_register"
            app:layout_constraintEnd_toEndOf="@+id/username_editText_register"
            app:layout_constraintStart_toStartOf="@+id/username_editText_register"
            android:layout_marginTop="16dp" android:autofillHints=""
            android:hint="@string/email" tools:targetApi="o" app:layout_constraintHorizontal_bias="0.0"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:id="@+id/password_edittext_register"
            android:background="@android:color/white" android:hint="@string/password" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_editext_register"
            app:layout_constraintStart_toStartOf="@+id/email_editext_register"
            app:layout_constraintEnd_toEndOf="@+id/email_editext_register" android:importantForAutofill="no"
            tools:targetApi="o"
    />
    <Button
            android:text="@string/register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/registerbtn_edittext_register"
            app:layout_constraintStart_toStartOf="@+id/password_edittext_register"
            app:layout_constraintEnd_toEndOf="@+id/password_edittext_register" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/password_edittext_register"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>